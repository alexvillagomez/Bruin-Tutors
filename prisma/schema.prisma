// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js / Auth.js adapter models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  profile  Profile?
  bookings Booking[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Extended profile model for additional user information
model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  phone     String?
  timezone  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Booking model - canonical source of truth for all paid sessions
model Booking {
  id                      String    @id @default(cuid())
  userId                  String?   // Nullable for unauthenticated bookings (can be claimed later)
  tutorId                 String    // Matches tutor id from tutors data module
  startTime               DateTime  // Stored in UTC
  endTime                 DateTime  // Stored in UTC
  status                  BookingStatus @default(SCHEDULED)
  priceCents              Int
  currency                String    @default("usd")
  stripeCheckoutSessionId String    @unique // Unique to prevent duplicates
  stripePaymentIntentId   String?
  stripeCustomerId        String?
  googleCalendarEventId    String?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, startTime])
  @@index([tutorId, startTime])
  @@index([stripeCheckoutSessionId])
}

enum BookingStatus {
  SCHEDULED
  COMPLETED
  CANCELED
}
